# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/autoparts_pos?schema=public"

# JWT Configuration
JWT_ACCESS_SECRET="your-super-secret-access-key-change-in-production"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-change-in-production"
JWT_ACCESS_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"

# Application
PORT=3000
NODE_ENV="development"

# Stock Alert Configuration
STOCK_CHECK_INTERVAL="*/5 * * * *"  # Cron expression: every 5 minutes
STOCK_ALERT_COOLDOWN_HOURS=24       # Hours before sending another alert for same product

# Email Configuration (Gmail)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false                    # true for 465, false for other ports
SMTP_USER="your-email@gmail.com"     # Your Gmail address
SMTP_PASSWORD="your-gmail-app-password"  # Gmail App Password (not regular password)
EMAIL_FROM="Auto Parts POS <your-email@gmail.com>"
